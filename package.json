{
	"name": "acid-terminal",
	"displayName": "acid-terminal",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:acid-terminal-list-view"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "acid-terminal.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "acid-terminal.refreshConf",
				"title": "Refresh"
			},
			{
				"command": "acid-terminal.cmd.run",
				"title": "Run"
			},
			{
				"command": "acid-terminal.list.run",
				"title": "Run"
			},
			{
				"command": "acid-terminal.list.show",
				"title": "Show"
			},
			{
				"command": "acid-terminal.list.delete",
				"title": "Delete"
			},
			{
				"command": "acid-terminal.list.setup",
				"title": "Setup"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "acid-terminal-container",
					"title": "acid-terminal",
					"icon": "media/terminal-icon.svg"
				}
			]
		},
		"views": {
			"acid-terminal-container": [
			  {
				"id": "acid-terminal-list-view",
				"name": "Terminals"
			  },
			  {
				"id": "acid-terminal-cmd-view",
				"name": "Quick Commands"
			  }
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "acid-terminal.refreshConf",
					"when": "view == acid-terminal-cmd-view",
					"group": "navigation"
				},
				{
					"command": "acid-terminal.refreshConf",
					"when": "view == acid-terminal-list-view",
					"group": "navigation"
				},
				{
					"command": "acid-terminal.list.delete",
					"when": "view == acid-terminal-list-view",
					"group": "navigation"
				},
				{
					"command": "acid-terminal.list.setup",
					"when": "view == acid-terminal-list-view",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "acid-terminal.cmd.run",
					"when": "view == acid-terminal-cmd-view && viewItem == Cmd",
					"group": "inline"
				},
				{
					"command": "acid-terminal.list.run",
					"when": "view == acid-terminal-list-view && viewItem == Cmd",
					"group": "inline"
				},
				{
					"command": "acid-terminal.list.show",
					"when": "view == acid-terminal-list-view && viewItem != Cmd",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}