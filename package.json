{
	"name": "acid-terminal",
	"displayName": "acid-terminal",
	"description": "Preconfigure terminals, terminal groups, commands and use them with ease",
	"version": "0.2.5",
	"publisher": "acid-srvnn",
	"author": {
		"name": "acid-srvnn",
		"email": "safa.acid@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/acid-srvnn/acid-terminal"
	},
	"icon": "resources/icons/light/icon.png",
	"preview": false,
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "acid-terminal.refreshConf",
				"title": "Refresh Config",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "acid-terminal.cmd.run",
				"title": "Run"
			},
			{
				"command": "acid-terminal.list.run",
				"title": "Run"
			},
			{
				"command": "acid-terminal.copycmd",
				"title": "Copy"
			},
			{
				"command": "acid-terminal.list.show",
				"title": "Show"
			},
			{
				"command": "acid-terminal.list.delete",
				"title": "Remove open terminals",
				"icon": {
					"light": "resources/icons/light/trash.svg",
					"dark": "resources/icons/dark/trash.svg"
				}
			},
			{
				"command": "acid-terminal.list.setup",
				"title": "Setup terminals",
				"icon": {
					"light": "resources/icons/light/run.svg",
					"dark": "resources/icons/dark/run.svg"
				}
			},
			{
				"command": "acid-terminal.openmysettings",
				"title": "Settings",
				"icon": {
					"light": "resources/icons/light/settings.svg",
					"dark": "resources/icons/dark/settings.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "acid-terminal-container",
					"title": "acid-terminal",
					"icon": "resources/icons/light/sidebar.svg"
				}
			]
		},
		"views": {
			"acid-terminal-container": [
				{
					"id": "acid-terminal-list-view",
					"name": "Terminals"
				},
				{
					"id": "acid-terminal-cmd-view",
					"name": "Quick Commands"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "acid-terminal.openmysettings",
					"when": "view == acid-terminal-cmd-view",
					"group": "navigation@1"
				},
				{
					"command": "acid-terminal.refreshConf",
					"when": "view == acid-terminal-cmd-view",
					"group": "navigation@2"
				},
				{
					"command": "acid-terminal.openmysettings",
					"when": "view == acid-terminal-list-view",
					"group": "navigation@1"
				},
				{
					"command": "acid-terminal.refreshConf",
					"when": "view == acid-terminal-list-view",
					"group": "navigation@2"
				},
				{
					"command": "acid-terminal.list.delete",
					"when": "view == acid-terminal-list-view",
					"group": "navigation@3"
				},
				{
					"command": "acid-terminal.list.setup",
					"when": "view == acid-terminal-list-view",
					"group": "navigation@4"
				}
			],
			"view/item/context": [
				{
					"command": "acid-terminal.cmd.run",
					"when": "view == acid-terminal-cmd-view && viewItem == Cmd",
					"group": "inline"
				},
				{
					"command": "acid-terminal.list.run",
					"when": "view == acid-terminal-list-view && viewItem == Cmd",
					"group": "inline"
				},
				{
					"command": "acid-terminal.cmd.run",
					"when": "view == acid-terminal-cmd-view && viewItem == Cmd",
					"group": "navigation@1"
				},
				{
					"command": "acid-terminal.list.run",
					"when": "view == acid-terminal-list-view && viewItem == Cmd",
					"group": "navigation@1"
				},
				{
					"command": "acid-terminal.copycmd",
					"when": "view == acid-terminal-cmd-view && viewItem == Cmd",
					"group": "navigation@2"
				},
				{
					"command": "acid-terminal.copycmd",
					"when": "view == acid-terminal-list-view && viewItem == Cmd",
					"group": "navigation@2"
				},
				{
					"command": "acid-terminal.list.show",
					"when": "view == acid-terminal-list-view && viewItem == Terminal",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "acid-terminal",
			"properties": {
				"acid-terminal.conf.type": {
					"type": "string",
					"default": "json",
					"enum": [
						"json",
						"file"
					],
					"description": "Load config from"
				},
				"acid-terminal.conf.json": {
					"type": "object",
					"description": "Provide config json",
					"properties": {
						"setTerminalsAtStart": {
							"type": "boolean"
						},
						"terminalGroups": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"terminals": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"name": {
													"type": "string"
												},
												"path": {
													"type": "string"
												},
												"cmd": {
													"type": "string"
												},
												"cmds": {
													"type": "array",
													"items": {
														"type": "object",
														"properties": {
															"name": {
																"type": "string"
															},
															"cmd": {
																"type": "string"
															},
															"dontexecute": {
																"type": "boolean"
															}
														}
													}
												}
											}
										}
									}
								}
							}
						},
						"cmdGroups": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"cmds": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"name": {
													"type": "string"
												},
												"cmd": {
													"type": "string"
												},
												"dontexecute": {
													"type": "boolean"
												}
											}
										}
									}
								}
							}
						}
					}
				},
				"acid-terminal.conf.file": {
					"type": "string",
					"description": "Provide config file"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
